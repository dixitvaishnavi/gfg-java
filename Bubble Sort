class Solution
{
    //Function to sort the array using bubble sort algorithm.
	public static void bubbleSort(int arr[], int n)
    {
        //code here
          int sorted = 0;

// variable to check if swapping is done in the iteration, i.e. if next iteration will be needed.
       while(sorted == 0)
       {
           sorted = 1;
           for(int i=0;i<n-1;i++)
           {
               if(arr[i]>arr[i+1])
               {
                   int temp = arr[i];
                   arr[i] = arr[i+1];
                   arr[i+1] = temp;
                   sorted = 0;
               }
           }
       }

    }
}
